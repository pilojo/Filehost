<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>com.algonquincollege.waterbin.fs.fsAggregator.FSAggregatorInitializer</listener-class>
    </listener>
    
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/Download/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCheckServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.LoginCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MoveServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.MoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CopyServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.CopyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RenameServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.RenameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.RemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeDirectoryServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.MakeDirectoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListContentsServlet</servlet-name>
        <servlet-class>com.algonquincollege.javaApp.webhost.servlets.ListContentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/server/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCheckServlet</servlet-name>
        <url-pattern>/server/isLogedIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoveServlet</servlet-name>
        <url-pattern>/server/mv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CopyServlet</servlet-name>
        <url-pattern>/server/cp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoveServlet</servlet-name>
        <url-pattern>/server/rename</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/server/rm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeDirectoryServlet</servlet-name>
        <url-pattern>/server/mkdir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/server/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListContentsServlet</servlet-name>
        <url-pattern>/server/ls</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/server/signup</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
     <error-page>
       <error-code>404</error-code>
       <location>/index.html</location>
   </error-page>

</web-app>
